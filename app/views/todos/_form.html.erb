<%= form_with model: todo do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
    <% todo.errors.full_messages_for(:title).each do |message|%>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %><br>
    <% todo.errors.full_messages_for(:description).each do |message|%>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %><br>
  </div>

  <div>
    <%= form.submit  %>
  </div>
<% end %>
