<h1><%= @todo.title %></h1>

<p>
  Description: <%= @todo.description %>
</p>

<p>
  Done: <%= @todo.done %>
</p>

<ul>
  <li>
    <%= link_to "Edit", edit_todo_path(@todo) %>
  </li>
  <li>
    <%= link_to "Destroy", todo_path(@todo), method: :delete, data: { confirm: "Are you sure?" }%>
  </li>
</ul>

<h2>Comments</h2>
<%= render @todo.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>
